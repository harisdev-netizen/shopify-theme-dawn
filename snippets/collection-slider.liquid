<style>
  :root {
    --margin-block: {{ margin_block | default: "0" }}px;
    --collection-width: {{ collection_width | default: "300" }}px;
    --border-radius: {{ border_radius | default: "50" }}%;
    --gradient-color: {{ gradient_color | default: "linear-gradient(45deg, #f3ec78, #af4261)" }};
    --scrollbar-color: {{ scrollbar_color | default: "#FF6347" }};
  }
</style>

{% comment %} <style>
    .collection-slider-wrapper {
        width: 100%;
        max-width: 1600px;
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
        gap: 1.5rem;
        overflow-x: auto;
        overflow-y: hidden;
        scroll-behavior: smooth;
        box-sizing: border-box;
        padding-block: 20px;
        padding-inline: 20px;
        margin: {{ margin_block }}px auto;
      --content-width: {{ collection_width }}px;
    }

  /*To center the main container keeping the horizontal scroll */
      .collection-slider-wrapper--gm::before,
      .collection-slider-wrapper--gm::after {
        content: "";
        margin: auto;
      }

    .collection-slider-content {
        width: var(--content-width);
        height: auto;
        min-height: var(--content-width);
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        flex-shrink: 0;
      }

      .collection-slider-content a {
        width: 100%;
        height: 100%;
        text-decoration: none;  
        font-size: 1.2rem;
        text-align: center;
      }

      .collection-image-wrapper {
        width: 100%;
        height: auto;
        aspect-ratio: 1/1;
        border-radius: {{ border_radius }}%;   
        margin-bottom: 5px;
      }
     
    .collection-image-wrapper img {
        width: 100%;
        height: 100%;
        aspect-ratio: 1/1;
        object-fit: cover;
        border-radius: {{ border_radius }}%; 
        padding: 5px;
        background: {{ gradient_color }} padding-box;
    }

    .collection-image-wrapper:hover img  {
        transform: scale(1.1);
        transform-origin: center;
        transition: transform 0.3s ease;
    }

    @media only screen and (max-width: 992px) {
      .collection-slider-wrapper--gm {
          scrollbar-width: none;
      }
      
     .collection-slider-content--gm {
          width: calc(var(--content-width)/1.5);
          min-height: calc(var(--content-width)/1.5);
      }
    .collection-slider-wrapper--gm::-webkit-scrollbar {
        display: none;
      }
 
    .collection-slider-content--gm a {
      font-size: 1rem;
      }
    }

  @media only screen and (max-width: 640px){
    .collection-slider-content--gm {
      width: calc(var(--content-width)/2);
      min-height: calc(var(--content-width)/2);
    }
  }


 / * ===== Scrollbar CSS ===== */
.collection-slider-wrapper--gm {
    scrollbar-width: auto;
    scrollbar-color: #FF6347 #FFFFE0;
  }

  /* Chrome, Edge, and Safari */
  .collection-slider-wrapper--gm::-webkit-scrollbar {
    width: 16px;
  }

  .collection-slider-wrapper--gm::-webkit-scrollbar-track {
    background: #FFFFE0;
    border-radius: 100px;
  }

  .collection-slider-wrapper--gm::-webkit-scrollbar-thumb {
    background-color: {{ scrollbar_color }};
    border-radius: 100px !important;
    border: 3px solid #ffffff;
  }

/* ===== Scrollbar CSS ===== */


</style> {% endcomment %}

<div class="collection-slider-content" {{ block.shopify_attributes }}>
    <a href="{{ collection_url }}">
      <div class="collection-image-wrapper">
        {{ collection_image | image_url: width: 200, height: 200 | image_tag: alt: collection.name, crop: "center" }}
      </div>
      {{ collection_name }}
    </a>
</div>



