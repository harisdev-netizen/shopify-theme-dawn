<style>
  #tp-{{ section.id }} {
    --tp-section-width: {{ section.settings.section_width }}px;
    --tp-header-width: {{ section.settings.header_width }}px;
    --tp-form-width: {{ section.settings.form_width }}px;
    --tp-icon-width: {{ section.settings.mobile_icon_width }}px;
    --tp-button-width: {{ section.settings.mobile_button_width }}px;
    --tp-input-border-radius: {{ section.settings.input_border_radius }}px;
    --tp-input-border-width: {{ section.settings.input_border_tickness }}px;
    --tp-padding-top: {{ section.settings.mobile_top_padding }}px;
    --tp-padding-bottom: {{ section.settings.mobile_bottom_padding }}px;
    --tp-space-heading-top: {{ section.settings.heading_top_space }}px;
    --tp-space-description-top: {{ section.settings.description_top_space }}px;
    --tp-space-form-top: {{ section.settings.form_top_space }}px;
    --tp-space-footer-note-top: {{ section.settings.footer_note_top_space }}px;
    --tp-space-around-button: {{ section.settings.space_arround_button }}px;
    --tp-font-size-heading: {{ section.settings.mobile_heading_text_size }}px;
    --tp-font-size-description: {{ section.settings.mobile_description_text_size }}px;
    --tp-font-size-input: {{ section.settings.mobile_input_text_size }}px;
    --tp-font-size-button: {{ section.settings.mobile_button_text_size }}px;
    --tp-font-weight-heading: {{ section.settings.heading_text_weight }};
    --tp-font-weight-description: {{ section.settings.description_text_weight }};
    --tp-font-weight-input: {{ section.settings.input_text_weight }};
    --tp-font-weight-button: {{ section.settings.button_text_weight }};
    --tp-color-background: {{ section.settings.background_gradient | default: section.settings.background_color }};
    --tp-color-heading: {{ section.settings.heading_color }};
    --tp-color-description: {{ section.settings.description_color }};
    --tp-color-input: {{ section.settings.input_color }};
    --tp-color-input-background: {{ section.settings.input_background_color }};
    --tp-color-input-border: {{ section.settings.input_border_color }};
    --tp-color-placeholder: {{ section.settings.placeholder_text_color }};
    --tp-color-button: {{ section.settings.button_text_color }};
    --tp-color-button-background: {{ section.settings.button_background_color }};
    --tp-color-footer-note: {{ section.settings.footer_note_color }};

    padding-block: var(--tp-padding-top) var(--tp-padding-bottom);
    background: var(--tp-color-background);
    font-size: 0;
  }

  @media screen and (min-width: 768px) {
    #tp-{{ section.id }} {
      --tp-padding-top: {{ section.settings.desktop_top_padding }}px;
      --tp-padding-bottom: {{ section.settings.desktop_bottom_padding }}px;
      --tp-button-width: {{ section.settings.desktop_button_width }}px;
      --tp-icon-width: {{ section.settings.desktop_icon_width }}px;
      --tp-font-size-heading: {{ section.settings.desktop_heading_text_size }}px;
      --tp-font-size-description: {{ section.settings.desktop_description_text_size }}px;
      --tp-font-size-button: {{ section.settings.desktop_button_text_size }}px;
      --tp-font-size-input: {{ section.settings.desktop_input_text_size }}px;
    }
  }
</style>

<div id="tp-{{ section.id }}" class="tp__text-{{ section.settings.content_alignment }}">
  <div {{ html_id }} class="{{ 'tp__container ' | append: section.settings.html_class | strip }}">
    <div class="tp__section-header tp__margin-{{ section.settings.content_alignment }} tp__align-{{ section.settings.content_alignment }}">
      <div class="tp__section-icon">
        {%- if section.settings.image -%}
          {{ section.settings.image | image_url: width: 132 | image_tag: loading: 'lazy', widths: '180, 360, 540, 720, 900, 1080' }}
        {%- else -%}
          <svg width="132" height="132" viewBox="0 0 132 132" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M121 24.75H11C6.44365 24.75 2.75 28.4437 2.75 33V99C2.75 103.556 6.44365 107.25 11 107.25H121C125.556 107.25 129.25 103.556 129.25 99V33C129.25 28.4437 125.556 24.75 121 24.75Z" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M112.75 46.75L66 77L19.25 46.75" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M19.25 88L38.5 77" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M112.75 88L93.5 77" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        {%- endif -%}
      </div>

      {%- if section.settings.heading != blank -%}
        <{{ heading_tag }} class="tp__section-heading">{{ section.settings.heading }}</{{ heading_tag }}>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <p class="tp__section-description">{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    {% form 'customer' %}
      <div class="tp__form tp__margin-{{ section.settings.content_alignment }}">
        <div class="tp__form-input-wrapper">
          <input type="email" class="tp__input" name="contact[email]" value="{{ form.email }}" required="true" placeholder="{{ section.settings.placeholder_text }}" />

          {%- if section.settings.button_icon != blank or section.settings.button_text != blank -%}
            <button type="submit" class="tp__button tp__button--{{ section.settings.button_hover }} tp__transition-03s">
              {%- liquid
                echo section.settings.button_text

                if section.settings.button_icon != blank
                  echo section.settings.button_icon | image_url: width: 25 | image_tag: loading: 'lazy'
                endif
              -%}
            </button>
          {%- endif -%}
        </div>

        {%- if section.settings.footer_note != blank -%}
          <p class="tp__footer-note">{{ section.settings.footer_note }}</p>
        {%- endif -%}
      </div>
    {% endform %}
  </div>
</div>

