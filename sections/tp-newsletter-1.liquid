{% stylesheet %}
  .tp-newsletter-1 * {
    margin: 0;
  }

  .tp__margin-left { margin-inline: 0 auto; }
  .tp__margin-center { margin-inline: auto; }
  .tp__margin-right { margin-inline: auto 0; }
  .tp__align-left { align-items: flex-start; }
  .tp__align-center { align-items: center; }
  .tp__align-right { align-items: flex-end; }

  .tp-newsletter-1 .tp__container {
    gap: var(--tp-space-form-top);
    max-width: calc(var(--tp-section-width) + 40px);
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-inline: 20px;
  }

  .tp-newsletter-1 .tp__container a {
    color: inherit;
  }

  .tp-newsletter-1 .tp__section-header {
    max-width: var(--tp-header-width);
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .tp-newsletter-1 .tp__section-icon {
    width: var(--tp-icon-width);
    position: relative;
    aspect-ratio: 1;
  }

  .tp-newsletter-1 .tp__section-icon img,
  .tp-newsletter-1 .tp__section-icon svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .tp-newsletter-1 .tp__section-heading {
    color: var(--tp-color-heading);
    font-size: var(--tp-font-size-heading);
    font-weight: var(--tp-font-weight-heading);
    margin-top: var(--tp-space-heading-top);
    line-height: 2.5ex;
  }

  .tp-newsletter-1 .tp__section-description {
    color: var(--tp-color-description);
    font-size: var(--tp-font-size-description);
    font-weight: var(--tp-font-weight-description);
    margin-top: var(--tp-space-description-top);
    line-height: 2.5ex;
  }

  .tp-newsletter-1 form {
    width: 100%;
  }

  .tp-newsletter-1 .tp__form {
    max-width: var(--tp-form-width);
    width: 100%;
  }

  .tp-newsletter-1 .tp__form-input-wrapper {
    padding: var(--tp-space-around-button);
    width: 100%;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: right;
  }

  .tp-newsletter-1 .tp__form input[type="email"] {
    border: var(--tp-input-border-width) solid var(--tp-color-input-border);
    border-radius: var(--tp-input-border-radius);
    background-color: var(--tp-color-input-background);
    font-size: var(--tp-font-size-input);
    font-weight: var(--tp-font-weight-input);
    color: var(--tp-color-input);
    padding: 15px calc(var(--tp-button-width) + 15px) 15px 20px;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  .tp-newsletter-1 .tp__form input[type="email"]::placeholder {
    color: var(--tp-color-placeholder);
    font-weight: var(--tp-font-weight-input);
    font-family: inherit;
  }

  .tp-newsletter-1 .tp__button {
    max-width: var(--tp-button-width);
    background: var(--tp-color-button-background);
    color: var(--tp-color-button);
    font-size: var(--tp-font-size-button);
    font-weight: var(--tp-font-weight-button);
    border-top-right-radius: var(--tp-input-border-radius);
    border-bottom-right-radius: var(--tp-input-border-radius);
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid transparent;
    flex-direction: row;
    padding: 14px 5px;
    gap: 10px;
    z-index: 1;
    transition: 0.3s;
  }

  .tp-newsletter-1 .tp__button--scale:hover { transform: scale(1.1); }
  .tp-newsletter-1 .tp__button--fade:hover { opacity: 0.8; }
  .tp-newsletter-1 .tp__button--invert:hover {
    color: var(--button-background-color);
    background-color: transparent;
    border-color: var(--button-background-color);
}

  .tp-newsletter-1 .tp__button img {
    max-width: 25px;
  }

  .tp-newsletter-1 .tp__footer-note {
    margin-top: var(--tp-space-footer-note-top);
    color: var(--tp-color-footer-note);
    line-height: 3ex;
    font-size: 14px;
  }
