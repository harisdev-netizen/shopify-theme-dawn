<div id="tp-{{ section.id }}" class="tp-{{ section.id }}">
  <div {{ html_id }} class="{{ 'tp__container' | append: section.settings.html_class | strip }}">
    {%- if section_heading != blank or section_description != blank -%}
      <div class="tp__section-header tp__margin-{{ section.settings.header_alignment }} tp__text-{{ section.settings.header_alignment }}">
        {%- if section_heading != blank -%}
          <{{ heading_tag }} class="tp__section-heading"> {{ section_heading }}</{{ heading_tag }}>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <p class="tp__section-description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="tp__testimonials-wrapper">
      <div class="tp__testimonials">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide tp__text-mobile--{{ section.settings.mobile_testimonial_text_alignment }} tp__text-desktop--{{ section.settings.desktop_testimonial_text_alignment }}">
                <div class="tp__testimonial-image {% if section.settings.mobile_hide_image %}tp__hide-on-mobile{% endif %}">
                  {%- if block.settings.image -%}
                    {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', widths: '165, 360, 198, 432, 535, 642, 750, 900, 1070, 1284, 1500, 1800 ' }}
                  {%- else -%}
                    <div class="tp__testimonial-image-placeholder">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="icon icon-account" viewBox="0 0 18 19"><path fill="currentColor" fill-rule="evenodd" d="M6 4.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0m3-4a4 4 0 1 0 0 8 4 4 0 0 0 0-8m5.58 12.15c1.12.82 1.83 2.24 1.91 4.85H1.51c.08-2.6.79-4.03 1.9-4.85C4.66 11.75 6.5 11.5 9 11.5s4.35.26 5.58 1.15M9 10.5c-2.5 0-4.65.24-6.17 1.35C1.27 12.98.5 14.93.5 18v.5h17V18c0-3.07-.77-5.02-2.33-6.15-1.52-1.1-3.67-1.35-6.17-1.35" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  {%- endif -%}
                </div>

              <div class="tp__testimonial-content">
                {%- if block.settings.title -%}
                  <div class="tp__testimonial-title">
                    <span>{{ block.settings.title }}</span>
                  </div>
                {%- endif -%}

                {%- if block.settings.rating > 0 and section.settings.disable_rating == false -%}
                  <div class="tp__testimonial-rating">
                    {%- assign total_stars = block.settings.rating -%}
                    {% assign rated_stars = total_stars | ceil %}
                    {%- assign whole_stars = total_stars | floor -%}
                    {%- assign decimal = total_stars | modulo: 1 -%}
                    
                    <svg width="80" height="16" viewBox="0 0 80 16" xmlns="http://www.w3.org/2000/svg">
                      {%- assign star_size = 16 -%}

                      <defs>
                        <clipPath id="half-star">
                          <rect x="0" y="0" width="10.4" height="18" />
                        </clipPath>
                      </defs>
                      {%- for i in (1..5) -%}
                        {%- assign x_position = i | minus: 1 | times: star_size -%}
                        <g transform="translate({{ x_position }}, 0), scale(0.8)">
                          <path d="M10 1l2.59 6.68H19l-5.3 4.34L15 19l-5-3.5L5 19l1.3-6.98L1 8h6.41L10 1z"
                            fill="{% if i <= whole_stars %}{{ section.settings.star_color }}{% else %}none{% endif %}"
                            stroke="{{ section.settings.star_color }}" />
                          {%- if decimal == 0.5 and i == rated_stars -%}
                            <path d="M10 1l2.59 6.68H19l-5.3 4.34L15 19l-5-3.5L5 19l1.3-6.98L1 8h6.41L10 1z"
                                  fill="{{ section.settings.star_color }}"
                                  stroke="{{ section.settings.star_color }}"
                                  clip-path="url(#half-star)" />
                          {%- endif -%}
                        </g>
                      {%- endfor -%}
                    </svg>
                  </div>
                {%- endif -%}

                {%- if block.settings.description -%}
                  <div class="tp__testimonial-description">
                    {{ block.settings.description }}
                  </div>
                {%- endif -%}

                {%- if block.settings.name -%}
                  <div class="tp__testimonial-author">
                    <span>{{ block.settings.name }}</span>
                    {%- if block.settings.subline -%}
                      <div class="tp__testimonial-subline">
                        <span>{{ block.settings.subline }}</span>
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
                <div class="tp__testimonial-comma tp__hide-on-mobile">
                  <span>
                    <svg width="163" height="123" viewBox="0 0 163 123" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path opacity="0.03" d="M70.0134 61.3186V123H0V75.1062C0 48.2566 5.956 28.9056 17.868 17.0531C29.2938 5.68436 46.1894 0 68.5548 0H71.1074V29.3894H68.5548C57.129 29.3894 48.3773 32.0502 42.2998 37.3717C36.2222 42.6932 33.1834 50.4336 33.1834 60.5929V61.3186H70.0134ZM161.906 61.3186V123H91.8926V75.1062C91.8926 48.2566 97.8486 28.9056 109.761 17.0531C121.186 5.68436 138.082 0 160.447 0H163V29.3894H160.447C149.022 29.3894 140.27 32.0502 134.192 37.3717C128.115 42.6932 125.076 50.4336 125.076 60.5929V61.3186H161.906Z" fill="#000"/>
                    </svg>
                  </span>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      {% if has_carousel == true %}
        <div class="tp__carousel-buttons tp__margin-center {% if section.settings.hide_arrows_on_mobile %}tp__hide-on-mobile{% endif %}">
          <button class="tp__carousel-button tp__carousel-button--prev">
            {%- if section.settings.carousel_button_icon != blank -%}
            {{ section.settings.carousel_button_icon | image_url: width: 50 | image_tag }}
          {%- else -%}
            <svg xmlns="http://www.w3.org/2000/svg" width="31" height="9" fill="none"><path d="M31 4H6v1h25V4ZM6 0v9L0 4.5 6 0Z" fill="#000"/></svg>
          {%- endif -%}
        </button>

        <button class="tp__carousel-button tp__carousel-button--next">
          {%- if section.settings.carousel_button_icon != blank -%}
            {{ section.settings.carousel_button_icon | image_url: width: 50 | image_tag }}
          {%- else -%}
            <svg xmlns="http://www.w3.org/2000/svg" width="31" height="9" fill="none"><path d="M31 4H6v1h25V4ZM6 0v9L0 4.5 6 0Z" fill="#000"/></svg>
          {%- endif -%}
          </button>
        </div>
      {% endif %}
    </div>
  </div>
</div>
  <script defer src="https://cdn.shopify.com/s/files/1/0828/2452/8179/files/swiper-10.3.1.min.js?v=1708370795"></script>
  <script>
  (() => {
    document.addEventListener('DOMContentLoaded', function() {
      let tpTestimonialsTwo = document.querySelector('#tp-{{ section.id }} .tp__testimonials');
      let tpTestimonialsTwoSlides = document.querySelectorAll('#tp-{{ section.id }} .tp__testimonials .swiper-slide');
      if (!tpTestimonialsTwo) return;

      let tpTestimonialsCarousel = function() {
        let options = {
          spaceBetween: {{ section.settings.mobile_testimonials_gap }},
          slidesPerView: {{ section.settings.mobile_testimonials_per_row }},
          loop: {{ section.settings.carousel_loop }},
          {% if section.settings.carousel_loop %}
            on:{
              beforeInit: function(swiper) {
                const slides = [...tpTestimonialsTwoSlides];
                console.log(slides);
                slides.forEach(slide => {
                  const slideClone = slide.cloneNode(true);
                  slideClone.classList.add('swiper-slide-duplicate');
                  tpTestimonialsTwoSlides[0].parentNode.appendChild(slideClone);
                });
              }
            },
          {% endif %}
          {% if section.settings.carousel_autoplay %}
            autoplay: {
              delay: {{ section.settings.carousel_autoplay_delay }},
            },
          {% endif %}
          navigation: {
            prevEl: "#tp-{{ section.id }} .tp__carousel-button--prev",
            nextEl: "#tp-{{ section.id }} .tp__carousel-button--next",
          },
          breakpoints: {
            768: {
              slidesPerView: 2,
            },
            1000: {
              slidesPerView: {{ section.settings.desktop_testimonials_per_row }},
              spaceBetween: {{ section.settings.desktop_testimonials_gap }},
            }
          }
        };
        console.log(options);
        new Swiper(tpTestimonialsTwo, options);
      }

      tpTestimonialsCarousel();
      });
  })();
  </script>


