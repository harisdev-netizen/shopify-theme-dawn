    --tp-testimonial-title-color: {{ section.settings.testimonial_title_color }};
    --tp-testimonial-name-color: {{ section.settings.testimonial_name_color }};
    --tp-testimonial-name-size: {{ section.settings.mobile_testimonial_name_text_size }}px;
    --tp-testimonial-name-weight: {{ section.settings.testimonial_name_text_weight }};
    --tp-testimonial-subline-size: {{ section.settings.mobile_testimonial_subline_text_size }}px;
    --tp-testimonial-subline-weight: {{ section.settings.testimonial_subline_text_weight }};
    --tp-testimonial-subline-color: {{ section.settings.testimonial_subline_color }};
    --tp-testimonial-description-size: {{ section.settings.mobile_testimonial_description_text_size }}px;
    --tp-testimonial-description-weight: {{ section.settings.testimonial_description_text_weight }};
    --tp-testimonial-description-color: {{ section.settings.testimonial_description_color }};
    --tp-container-gap: {{ section.settings.container_gap }}px;
    --tp-testimonials-horizontal-gap: {{ section.settings.mobile_testimonials_gap }}px;
    --tp-overlay-opacity: {{ section.settings.overlay_opacity }};
    --tp-background: {{ section.settings.background_gradient | default: section.settings.background_color }};
    --tp-testimonial-background: {{ section.settings.testimonial_background_gradient | default: section.settings.testimonial_background_color }};
    --tp-padding-block: {{ section.settings.mobile_top_padding }}px {{ section.settings.mobile_bottom_padding }}px;
