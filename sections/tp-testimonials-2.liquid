    --tp-description-color: {{ section.settings.description_color }};
    --tp-testimonial-text-alignment: {{ section.settings.mobile_testimonial_text_alignment }};
    --tp-testimonial-title-size: {{ section.settings.mobile_testimonial_heading_text_size }}px;
