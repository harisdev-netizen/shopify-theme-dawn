{% endcomment %}

{%- liquid
  assign image_class = 'tp__image'

  if section.settings.image_filter != blank
    assign image_class = image_class | append: ' tp__filter--' | append: section.settings.image_filter
  endif
-%}

{%- liquid
  assign heading_tag = 'h2'
  assign section_heading = section.settings.heading

  if section.index0 == 0 and section_heading != blank
    assign heading_tag = 'h1'
  endif
-%}

{%- capture html_id -%}
  {%- if section.settings.html_id != blank -%}
    id="{{ section.settings.html_id | handleize }}"
  {%- endif -%}
{%- endcapture -%}

{% stylesheet %}
  .tp-image-with-text-3 * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  .tp-image-with-text-3 a {
    color: inherit;
  }

  .tp-image-with-text-3 .tp__container {
    max-width: calc(var(--tp-section-width) + 20px);
    padding-block: var(--tp-padding-top) var(--tp-padding-bottom);
    flex-direction: var(--tp-layout-direction);
    gap: var(--tp-content-gap);
    padding-inline: 20px;
    margin-inline: auto;
    display: flex;
    align-items: center;
  }

  .tp-image-with-text-3 .tp__image-wrapper {
    border-radius: var(--tp-image-border-radius);
    min-height: var(--tp-image-min-height);
    background-color: #f8f8f8;
    width: 100%;
    flex: 1;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tp-image-with-text-3 .tp__image {
    object-fit: var(--tp-image-fit);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .tp-image-with-text-3 .tp__content {
    max-width: var(--tp-content-max-width);
    text-align: var(--tp-text-align);
    flex: 1;
  }

  .tp-image-with-text-3 .tp__heading {
    font-size: var(--tp-heading-size);
    font-weight: var(--tp-heading-weight);
    color: var(--tp-heading-color);
    margin-bottom: var(--tp-heading-margin-bottom);
    line-height: 1.2;
  }

  .tp-image-with-text-3 .tp__text {
    font-size: var(--tp-text-size);
    color: var(--tp-text-color);
    margin-bottom: var(--tp-text-margin-bottom);
    line-height: 1.6;
  }

  .tp-image-with-text-3 .tp__button {
    background-color: var(--tp-button-background);
    padding: 12px var(--tp-button-padding-inline);
    border-radius: var(--tp-button-radius);
    font-weight: var(--tp-button-weight);
    font-size: var(--tp-button-size);
    color: var(--tp-button-color);
    display: inline-block;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .tp-image-with-text-3 .tp__button:hover {
    opacity: 0.9;
  }

  .tp-image-with-text-3 .tp__filter--grayscale {
    filter: grayscale(100%);
  }

  .tp-image-with-text-3 .tp__filter--sepia {
    filter: sepia(100%) contrast(1.2);
  }

  .tp-image-with-text-3 .tp__filter--invert {
    filter: invert(100%);
  }
{% endstylesheet %}

<style>
  #tp-{{ section.id }} {
    /* Layout */
    --tp-section-width: {{ section.settings.section_width }}px;
    --tp-padding-top: {{ section.settings.mobile_padding_top }}px;
    --tp-padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
    --tp-content-gap: {{ section.settings.mobile_content_gap }}px;
    --tp-layout-direction: {{ section.settings.mobile_layout_direction }};
    --tp-button-padding-inline: {{ section.settings.mobile_button_padding_inline }}px;
    --tp-image-border-radius: {{ section.settings.image_border_radius }}px;
    --tp-image-fit: {{ section.settings.image_fit }};
    --tp-text-align: center;
    
    /* Typography */
    --tp-heading-size: {{ section.settings.mobile_heading_size }}px;
    --tp-heading-weight: {{ section.settings.heading_weight }};
    --tp-text-size: {{ section.settings.mobile_text_size }}px;
    --tp-button-size: {{ section.settings.mobile_button_size }}px;
    --tp-button-weight: {{ section.settings.button_weight }};
    
    /* Spacing */
    --tp-heading-margin-bottom: {{ section.settings.mobile_heading_margin }}px;
    --tp-text-margin-bottom: {{ section.settings.mobile_text_margin }}px;
    --tp-image-min-height: {{ section.settings.mobile_image_min_height }}px;
    --tp-content-max-width: {{ section.settings.content_max_width }}px;
    
    /* Colors */
    --tp-background-color: {{ section.settings.background_gradient | default: section.settings.background_color }};
    --tp-heading-color: {{ section.settings.heading_color }};
    --tp-text-color: {{ section.settings.text_color }};
    --tp-button-background: {{ section.settings.button_background }};
    --tp-button-color: {{ section.settings.button_color }};
    --tp-button-radius: {{ section.settings.button_radius }}px;
    
    background: var(--tp-background-color);
  }

  @media screen and (min-width: 768px) {
    #tp-{{ section.id }} {
      --tp-padding-top: {{ section.settings.desktop_padding_top }}px;
      --tp-padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
      --tp-content-gap: {{ section.settings.desktop_content_gap }}px;
      --tp-layout-direction: {{ section.settings.desktop_layout_direction }};
      --tp-heading-size: {{ section.settings.desktop_heading_size }}px;
      --tp-text-size: {{ section.settings.desktop_text_size }}px;
      --tp-button-size: {{ section.settings.desktop_button_size }}px;
      --tp-heading-margin-bottom: {{ section.settings.desktop_heading_margin }}px;
      --tp-text-margin-bottom: {{ section.settings.desktop_text_margin }}px;
      --tp-image-min-height: {{ section.settings.desktop_image_min_height }}px;
      --tp-button-padding-inline: {{ section.settings.desktop_button_padding_inline }}px;
      --tp-text-align: left;
    }
  }
</style>

<div id="tp-{{ section.id }}" class="tp-{{ section.id }}">
  <div {{ html_id }} class="{{ 'tp__container ' | append: section.settings.html_class | strip }}">
    <div class="tp__image-wrapper">
      {%- if section.settings.desktop_image != blank or section.settings.mobile_image != blank -%}
        <picture>
          <source media="(min-width: 768px)" srcset="{{ section.settings.desktop_image | image_url: width: section.settings.desktop_image.width }}">
          <source media="(max-width: 767px)" srcset="{{ section.settings.mobile_image | image_url: width: section.settings.mobile_image.width }}">
          {{ section.settings.desktop_image | image_url: width: section.settings.desktop_image.width | image_tag: loading: 'lazy', sizes: '(min-width: 768px) 50vw, 100vw', widths: '375, 550, 750, 1100, 1500', class: image_class }}
        </picture>
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'tp__image' }}
      {%- endif -%}
    </div>

    <div class="tp__content">
      {%- if section_heading != blank -%}
        <{{ heading_tag }} class="tp__heading">{{ section_heading }}</{{ heading_tag }}>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="tp__text">{{ section.settings.text }}</div>
      {%- endif -%}

      {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="tp__button" target="{{ section.settings.button_target }}">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

