    --tp-secondary-color: {{ secondary_color }};
    --tp-form-description-color: {{ section.settings.form_description_color }};
    --tp-highlighted-text: {{ section.settings.highlighted_text }};
    --tp-heading-size: {{ section.settings.mobile_heading_text_size }}px;
    --tp-heading-weight: {{ section.settings.heading_text_weight }};
    --tp-input-text-size: {{ section.settings.input_text_size }}px;
    --tp-fields-gap: {{ section.settings.fields_gap }}px;
    --tp-button-max-width: {{ section.settings.button_max_width }}px;
