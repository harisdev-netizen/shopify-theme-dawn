            {% case block.type %}
              {% when "info" %}
                <div class="tp__contact-blocks">
                  {%- if block.settings.info_icon != blank -%}
                    {{ block.settings.info_icon | image_url: width: 25 | image_tag: loading: 'lazy' }}
                  {%- endif -%}

                  <div>
                    {%- if block.settings.heading != blank -%}
                      <h4>{{ block.settings.heading }}</h4>
                    {%- endif -%}

                    {%- if block.settings.description != blank -%}
                      <p>{{ block.settings.description }}</p>
                    {%- endif -%}

                    {%- if block.settings.highlighted_text != blank -%}
                      <p>{{ block.settings.highlighted_text }}</p>
                    {%- endif -%}
