      --tp-form-description-size: {{ section.settings.desktop_form_description_text_size }}px;
      --tp-button-top-space: {{ section.settings.desktop_button_top_space }}px;
      --tp-contact-top-space: {{ section.settings.desktop_details_top_space }}px;
    }
  }
</style>

