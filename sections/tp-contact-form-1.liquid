    <div class="tp__form">
      <div class="tp__form-container">
        {%- if section.settings.form_heading != blank -%}
          <h2 class="tp__form-heading">{{ section.settings.form_heading }}</h2>
        {%- endif -%}

        {%- if section.settings.form_description != blank -%}
          <p class="tp__form-description">{{ section.settings.form_description }}</p>
        {%- endif -%}

        {% form 'contact' %}
          <input type="hidden" name="checkout_url" value="/pages/help" />
          {% for block in section.blocks %}
            {% case block.type %}
              {% when "text" %}
                <input type="text" name="contact[{{ block.settings.name | downcase | handleize }}]" placeholder="{{ block.settings.placeholder }}" {% if block.settings.required == true %}required{% endif %} />
              {% when "email" %}
                <input type="email" name="contact[{{ block.settings.name | downcase | handleize }}]" placeholder="{{ block.settings.placeholder }}" {% if block.settings.required == true %}required{% endif %} />
              {% when "phone" %}
                <input type="tel" name="contact[{{ block.settings.name | downcase | handleize }}]" placeholder="{{ block.settings.placeholder }}" {% if block.settings.required == true %}required{% endif %} />
              {% when "textarea" %}
                <textarea rows="{{ block.settings.height }}" name="contact[{{ block.settings.name | downcase | handleize }}]" placeholder="{{ block.settings.placeholder }}" {% if block.settings.required == true %}required{% endif %}></textarea>
            {% endcase %}
          {% endfor %}
          <div class="tp__checkboxes-wrapper">
            {% assign block_size = section.blocks | where: "type", "checkbox" | size %}

            {% if block_size > 0 and section.settings.checkboxes_wrapper_title != blank %}
              <p class="tp__checkboxes-title">{{ section.settings.checkboxes_wrapper_title }}</p>
            {% endif %}

            <div class="tp__checkboxes">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when "checkbox" %}
                    <div class="tp__checkbox">
                      <input type="checkbox" value="{{ block.settings.label }}" {% if block.settings.required == true %}required{% endif %} name="contact[best-time-to-call]" id="{{ block.settings.label | downcase | handleize }}" />
                      <label for="{{ block.settings.label }}">{{ block.settings.label }}</label>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>

            <button type="submit" value="Create" class="tp__button tp__button--{{ section.settings.button_hover }}">{{ section.settings.submit_button_text }}</button>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>

