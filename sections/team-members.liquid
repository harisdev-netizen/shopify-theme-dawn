<div class="page-width">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}
  <div class="grid grid-gap grid--2-col">
    {% for member in section.blocks %}
      <div class="grid__item">
        {% if member.settings.photo != blank %}
          {{ member.settings.photo | image_url: width: 200 | image_tag }}
        {% endif %}
        <h3>{{ member.settings.name }}</h3>
        <span>{{ member.settings.title }}</span>
        <p>{{ member.settings.bio }}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Team Members",
    "class": "team-members-section",
    "settings": [
      {
        "id" : "title",
        "type" : "text",
        "label" : "Section Title",
        "default" : "Meet our Team"
      }
    ],
    "blocks": [
      {
        "name" : "Team Member",
        "type" : "team-member-profile",
        "settings" : [
          {
            "id" : "photo",
            "type" : "image_picker",
            "label": "photo"
          },
          {
            "id" : "name",
            "type" : "text",
            "label" : "Name"
          },
          {
            "id" : "title",
            "type" : "text",
            "label" : "Job Title"
          },
          {
            "id" : "bio",
            "type" : "textarea",
            "label" : "Bio"
          }
        ]
      }
    ]
  }
{% endschema %}