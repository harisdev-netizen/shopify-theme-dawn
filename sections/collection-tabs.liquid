<style>
  #shopify-section-{{ section.id }} .collection-tabs ul {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }

  #shopify-section-{{ section.id }} .collection-tabs ul, #shopify-section-{{ section.id }} .collection-tabs li {
    padding: 0;
  }

  #shopify-section-{{ section.id }} .collection-tabs ul li {
    list-style: none;
    border: 1px solid #808080;
    padding: 1rem 1.2rem;
    border-radius: 10px;
  }

  #shopify-section-{{ section.id }} .collection-tabs ul li a {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 2rem;
    color: #212121;
    text-decoration: none;
  }

  #shopify-section-{{ section.id }} .collection-tabs ul li a:hover {
    text-decoration: underline;
  }

  #shopify-section-{{ section.id }} .collection-tabs img {
    width: 34px;
    height: 34px;
    border-radius: 50%;
    object-fit: cover;
  }

  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} .collection-tabs ul {
      flex-wrap: nowrap;
      overflow-x: scroll;
      overflow-y: hidden;
    }

    #shopify-section-{{ section.id }} .collection-tabs ul li {
      margin-bottom: 20px;
    }

    #shopify-section-{{ section.id }} .collection-tabs ul li a {
      font-size: 1rem;
      width: max-content;
    }
  }

</style>

<div class="page-width collection-tabs">
  {% if collections.size > 0 %}
    <ul>
      {% for collection in collections %}
        {% if collection.products.size > 0 %}
          <li class="collection-tabs__item">
            <a href="{{ collection.url }}">
              {% if collection.image %}
                {{ collection.image | image_url: width: 300 | image_tag: loading: 'lazy', class: 'collection-tabs__image', alt: collection.title }}
              {% endif %}
              <span class="collection-tabs__title">{{ collection.title }}</span>
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  {% else %}
    <p>No collections available</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Collection Tabs",
  "settings": [
    {
      "type": "range",
      "id": "tabs_per_row",
      "min": 2,
      "max": 6,
      "step": 1,
      "label": "Tabs per row",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Collection Tabs"
    }
  ]
}
{% endschema %}
