{% stylesheet %}
	.tp-contact-form-3 * {
		margin: 0;
		padding: 0;
	}

	.tp-contact-form-3 a { color: inherit; }

	.tp-contact-form-3 .tp__container {
		flex-direction: var(--tp-image-layout);
		padding-block: var(--tp-padding-top) var(--tp-padding-bottom);
		background: var(--tp-background);
		max-width: var(--tp-section-width);
		display: flex;
		gap: 50px;
		margin-inline: auto;
		padding-inline: 20px;
	}
	
	.tp-contact-form-3 .tp__form-heading {
		color: var(--tp-content-color);
		font-weight: var(--tp-heading-text-weight);
		font-size: var(--tp-heading-text-size);
		margin-bottom: var(--tp-heading-space-bottom);
	}

	.tp-contact-form-3 .tp__form {
		padding-top: var(--tp-form-top-padding);
		padding-bottom: var(--tp-form-bottom-padding);
		width: 100%;
		max-width: 100%;
		text-align: center;
	}

	.tp-contact-form-3 form {
		gap: var(--tp-fields-gap);
		display: flex;
		flex-direction: column;
	}

	.tp-contact-form-3 input:not([type="checkbox"]),
	.tp-contact-form-3 textarea {
		border: 1px solid var(--tp-input-border-color);
		font-size: var(--tp-input-text-size);
		color: var(--tp-input-color);
		padding: 16px 12px;
		font-weight: 400;
		font-family: inherit;
		resize: none;
	}

	.tp-contact-form-3 input::placeholder,
	.tp-contact-form-3 textarea::placeholder {
		color: var(--tp-input-color)
	}

	.tp-contact-form-3 .tp__checkboxes {
		display: flex;
		flex-wrap: wrap;
		margin-top: 8px;
		gap: 10px 40px;
	}

	.tp-contact-form-3 .tp__checkboxes > div { display: flex; }
	.tp-contact-form-3 .tp__checkboxes label { font-size: var(--tp-input-text-size); }

	.tp-contact-form-3 .tp__checkboxes-title {
		font-size: var(--tp-checkbox-size);
		font-weight: var(--tp-checkbox-text-weight);
	}

	.tp-contact-form-3 .tp__checkboxes input[type="checkbox"] {
		width: var(--tp-checkbox-width);
		accent-color: var(--tp-content-color);
		margin-right: 8px;
	}

	.tp-contact-form-3 button[type="submit"] {
		background-color: var(--tp-button-background-color);
		max-width: var(--tp-button-max-width);
		font-size: var(--tp-button-text-size);
		font-weight: var(--tp-button-text-weight);
		color: var(--tp-button-text-color);
		width: 100%;
		padding-block: 15px;
		outline: none;
		margin-top: 10px;
		cursor: pointer;
		border: 1px solid transparent;
		transition: 0.3s;
	}

	.tp__button--fade:hover { opacity: 0.8; }

	.tp__button--invert:hover {
		color: var(--tp-content-color);
		border-color: currentColor;
		background-color: transparent;
	}

	.tp-contact-form-3 .tp__information {
		font-size: var(--tp-information-text-size);
		text-align: center;
	}

	.tp-contact-form-3 .tp__information {
		color: var(--tp-information-color);
		font-weight: var(--tp-information-text-weight);
		text-align: center;
	}

	.tp-contact-form-3 .tp__image-wrapper {
		display: var(--tp-image-mobile);
		background-color: #f8f8f8;
		margin-top: 0;
		position: relative;
		aspect-ratio: 1/1;
	}

	.tp-contact-form-3 .tp__image-wrapper img,
	.tp-contact-form-3 .tp__image-wrapper svg  {
		position: absolute;
		top: 0;
		left: 0;
		object-fit: cover;
		object-position: center;
		height: 100%;
		width: 100%;
	}

	.tp-contact-form-3 .tp__filter--grayscale { filter: grayscale(100%); }
	.tp-contact-form-3 .tp__filter--sepia { filter: sepia(100%) contrast(1.2); }
	.tp-contact-form-3 .tp__filter--invert { filter: invert(100%); }

	@media screen and (min-width: 768px) {
		.tp-contact-form-3 .tp__container {
			flex-direction: var(--tp-image-layout);
			gap: 40px;
		}

		.tp-contact-form-3 .tp__form {
			max-width: 450px;
			text-align: left;
		}

		.tp-contact-form-3 .tp__image-wrapper {
			aspect-ratio: auto;
			max-width: 950px;
			width: 100%;
		}
	}

