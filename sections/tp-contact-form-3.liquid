		--tp-input-border-color: {{ section.settings.input_border_color }};
		--tp-checkbox-width : {{ section.settings.checkboxes_size }}px;
		--tp-checkbox-size: {{ section.settings.mobile_checkbox_title_size }}px;
		--tp-checkbox-text-weight: {{ section.settings.checkbox_title_text_weight }};
		--tp-button-text-size: {{ section.settings.button_text_size }}px;
		--tp-button-text-color: {{ section.settings.button_text_color }};
		--tp-button-text-weight: {{ section.settings.button_text_weight }};
		--tp-button-max-width: {{ section.settings.button_max_width }}%;
		--tp-button-background-color: {{ section.settings.button_background_color }};
		--tp-information-color: {{ section.settings.information_color }};
