		--tp-image-mobile: {{ section.settings.image_on_mobile }};
		--tp-image-layout: {{ section.settings.mobile_image_position }};
	}

	@media screen and (min-width: 768px) {
		#tp-{{ section.id }} {
			--tp-padding-top: {{ section.settings.desktop_top_padding }}px;
			--tp-padding-bottom: {{ section.settings.desktop_bottom_padding }}px;
			--tp-form-top-padding: {{ section.settings.desktop_form_top_padding }}px;
			--tp-form-bottom-padding: {{ section.settings.desktop_form_bottom_padding }}px;
			--tp-heading-text-size: {{ section.settings.desktop_form_heading_text_size }}px;
			--tp-heading-space-bottom: {{ section.settings.desktop_title_space_bottom }}px;
			--tp-checkbox-title-size: {{ section.settings.desktop_checkbox_title_size }}px;
			--tp-information-text-size: {{ section.settings.desktop_information_text_size }}px;
			--tp-image-layout: {{ section.settings.desktop_image_position }};
		}
	}
</style>

<div id="tp-{{ section.id }}" class="tp-{{ section.id }}">
	<div {{ html_id }} class="tp__container {{ section.settings.html_class | strip }}">
		<div class="tp__form">
			{% if section.settings.form_heading != blank %}
				<h2 class="tp__form-heading">{{ section.settings.form_heading }}</h2>
			{% endif %}
			{% form 'contact' %}
				{% for block in section.blocks %}
					{% case block.type %}
						{% when "text" %}
							<input type="text" name="contact[{{ block.settings.name | downcase | handleize }}]" {% if block.settings.required %}required{% endif %} placeholder="{{ block.settings.placeholder }}">
						{% when "email" %}
							<input type="email" name="contact[{{ block.settings.name | downcase | handleize }}]" {% if block.settings.required %}required{% endif %} placeholder="{{ block.settings.placeholder }}">
						{% when "phone" %}
							<input type="tel" name="contact[{{ block.settings.name | downcase | handleize }}]" {% if block.settings.required %}required{% endif %} placeholder="{{ block.settings.placeholder }}">
						{% when "textarea" %}
							<textarea name="contact[{{ block.settings.name | downcase | handleize }}]" rows="{{ block.settings.height }}" {% if block.settings.required %}required{% endif %} placeholder="{{ block.settings.placeholder }}"></textarea>
					{% endcase %}
				{% endfor %}

				<div class="tp__checkboxes-wrapper">
					{% assign blocks_size = section.blocks | where: "type", "checkbox" | size %}
					{% if blocks_size > 0 %}
						{% if section.settings.checkboxes_title != blank %}
							<p class="tp__checkboxes-title">{{ section.settings.checkboxes_title }}</p>
						{% endif %}
	
						<div class="tp__checkboxes">
							{% for block in section.blocks %}
								{% case block.type %}
									{% when "checkbox" %}
										<div>
											<input type="checkbox" value="{{ block.settings.label }}" name="contact[best-time-to-call]" id="{{ block.settings.label | downcase | handleize }}" {% if block.settings.required %}required{% endif %}>
											<label for="{{ block.settings.label | downcase | handleize }}">{{ block.settings.label }}</label>
										</div>
								{% endcase %}
							{% endfor %}
						</div>
					{% endif %}

				</div> 

				<button type="submit" class="tp__button--{{ section.settings.button_hover }}">{{ section.settings.submit_button_text }}</button>
		
				{% if section.settings.information != blank %}
					<p class="tp__information">{{ section.settings.information }}</p>
				{% endif %}
			{% endform %}
		</div>

		{% if section.settings.image_link != blank %}
			<a {% if section.settings.image_link_new_tab %}target="_blank"{% endif %} href="{{ section.settings.image_link }}" class="tp__image-wrapper">
		{% else %}
			<div class="tp__image-wrapper">
		{% endif %}
			{% if section.settings.image != blank %}
				{{ section.settings.image | image_url: width: 953 | image_tag: loading: 'lazy', class: tp_image }}
			{% else %}
				{{ 'image' | placeholder_svg_tag: 'tp__image' }}
			{% endif %}
		{% if section.settings.image_link != blank %}
			</a>
		{% else %}
			</div>
		{% endif %}
	</div>
</div>

