<div id="tp-{{ section.id }}" class="tp-{{ section.id }}">
  <div class="tp__shape"></div>

  <div {{ html_id }} class="tp__container">
    <div class="tp__header">
      <div class="tp__header-icon">
        {%- if section.settings.header_icon -%}
          {{ section.settings.header_icon | image_url: width: 72 | image_tag: loading: 'lazy' }}
        {%- else -%}
          <svg fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.182 15.182a4.5 4.5 0 01-6.364 0M21 12a9 9 0 11-18 0 9 9 0 0118 0zM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75zm-.375 0h.008v.015h-.008V9.75zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75zm-.375 0h.008v.015h-.008V9.75z" />
          </svg>
        {%- endif -%}
      </div>

      {%- if section_heading != blank -%}
        <{{ heading_tag }} class="tp__heading">{{ section_heading }}</{{ heading_tag }}>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <p class="tp__description">{{ section.settings.description }}</p>
      {%- endif -%}

      <div class="tp__btns-wrapper">
        {%- if section.settings.link_1_text != blank -%}
          <a href="{{ section.settings.link_1_url }}" class="tp__btn">
            {{ section.settings.link_1_text }}
          </a>
        {%- endif -%}

        {%- if section.settings.link_2_text != blank -%}
          <a href="{{ section.settings.link_2_url }}" class="tp__link">
            {{ section.settings.link_2_text }}
          </a>
        {%- endif -%}
      </div>
    </div>

    <div class="tp__countdown">
      {%- if section.settings.progess_label != blank -%}
        <div class="tp__progress">
          <label for="tp__sold-items">{{ section.settings.progess_label }}</label>
          <progress id="tp__sold-items" value="{{ section.settings.progess_value }}" max="100"></progress>
        </div>
      {%- endif -%}

      <div class="tp__countdown-block">
        <div class="tp__countdown-item">
          <div id="tp-days">00</div>
          <span>Days</span>
        </div>
        <div class="tp__countdown-item">
          <div id="tp-hours">00</div>
          <span>Hours</span>
        </div>
        <div class="tp__countdown-item">
          <div id="tp-minutes">00</div>
          <span>Minutes</span>
        </div>
        <div class="tp__countdown-item">
          <div id="tp-seconds">00</div>
          <span>Seconds</span>
        </div>
      </div>
      
      {%- if section.settings.countdown_description != blank -%}
        <p class="tp__countdown-description">{{ section.settings.countdown_description }}</p>
      {%- endif -%}
    </div>
  </div>
</div>

<script>
(function() {
  const tpCountDownTwo = document.querySelector('#tp-{{ section.id }}');
  const tpDaysEl = tpCountDownTwo.querySelector('#tp-days');
  const tpHoursEl = tpCountDownTwo.querySelector('#tp-hours');
  const tpMinutesEl = tpCountDownTwo.querySelector('#tp-minutes');
  const tpSecondsEl = tpCountDownTwo.querySelector('#tp-seconds');

  let endDateSetting = `{{- section.settings.countdown_enddate -}}`;

  if (endDateSetting) {
    const endDate = new Date(endDateSetting);
    let secondsLeft = (endDate.getTime() - new Date().getTime()) / 1000;

    function updateCountdown() {
      secondsLeft -= 1;

      const days = Math.floor((secondsLeft / 86400) % 30);
      tpDaysEl.textContent = days < 10 ? '0' + days : days;

      const hours = Math.floor((secondsLeft % 86400) / 3600);
      tpHoursEl.textContent = hours < 10 ? '0' + hours : hours;

      const minutes = Math.floor((secondsLeft % 3600) / 60);
      tpMinutesEl.textContent = minutes < 10 ? '0' + minutes : minutes;

      const seconds = Math.floor(secondsLeft % 60);
      tpSecondsEl.textContent = seconds < 10 ? '0' + seconds : seconds;

      console.log(seconds < 10 ? '0' + seconds : seconds);

      if (secondsLeft <= 0) {
        tpDaysEl.textContent = "00"
        tpHoursEl.textContent = "00"
        tpMinutesEl.textContent = "00"
        tpSecondsEl.textContent = "00"
      }
    }

    setInterval(updateCountdown, 1000);
  }
})();
</script>

