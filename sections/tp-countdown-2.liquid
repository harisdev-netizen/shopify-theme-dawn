{% stylesheet %}
  .tp-countdown-2 * {
    margin: 0;
    box-sizing: border-box;
  }

  .tp-countdown-2 a {
    color: inherit;
  }

  .tp-countdown-2 .tp__container {
    max-width: calc(var(--tp-section-width) + 20px * 2);
    gap: var(--tp-container-gap-column) var(--tp-container-gap-row);
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 1;
    width: 100%;
    padding-inline: 20px;
  }

  .tp-countdown-2 .tp__shape {
    background-color: var(--tp-bg-shape-color);
    display: block;
    height: 400px;
    width: 130%;
    position: absolute;
    bottom: 0;
    right: -15%;
    border-radius: 50% 50% 0 0;
  }

  .tp-countdown-2 .tp__header {
    max-width: var(--tp-header-width);
    gap: var(--tp-header-gap);
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .tp-countdown-2 .tp__header-icon {
    width: 100%;
    max-width: 72px;
    aspect-ratio: 1/1;
    margin-inline: auto;
    position: relative;
  }

  .tp-countdown-2 .tp__header-icon svg,
  .tp-countdown-2 .tp__header-icon img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .tp-countdown-2 .tp__heading {
    color: var(--tp-heading-color);
    font-size: var(--tp-heading-size);
    font-weight: var(--tp-heading-weight);
    line-height: 2.5ex;
  }

  .tp-countdown-2 .tp__description {
    color: var(--tp-description-color);
    font-size: var(--tp-description-size);
    font-weight: var(--tp-description-weight);
    line-height: 3ex;
  }

  .tp-countdown-2 .tp__btns-wrapper {
    margin-top: var(--tp-links-margin-top);
  }

  .tp-countdown-2 .tp__btn,
  .tp-countdown-2 .tp__link {
    max-width: var(--tp-link-max-width);
    background-color: var(--tp-link-background);
    color: var(--tp-link-color);
    font-size: var(--tp-link-size);
    font-weight: var(--tp-link-weight);
    width: 100%;
    padding: 14px 32px;
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    cursor: pointer;
  }

  .tp-countdown-2 .tp__link {
    margin-top: calc(var(--tp-links-margin-top) / 2);
    background-color: transparent;
    padding-block: 0;
    text-decoration: underline;
  }

  .tp-countdown-2 .tp__countdown {
    gap: var(--tp-countdown-content-gap);
    display: flex;
    flex-direction: column;
    margin-inline: auto;
  }

  .tp-countdown-2 .tp__countdown-block {
    gap: var(--tp-countdown-items-gap);
    display: flex;
    justify-content: center;
  }

  .tp-countdown-2 .tp__countdown-item {
    font-weight: var(--tp-countdown-item-weight);
    font-size: var(--tp-countdown-item-size);
    color: var(--tp-countdown-item-color);
    background-color: var(--tp-countdown-item-bg);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    max-width: 85px;
    padding: 8px;
    font-family: inherit;
    line-height: calc(2ex + 6px);
    text-align: center;
  }

  .tp-countdown-2 .tp__countdown-item span {
    font-size: var(--tp-countdown-desc-size);
    font-weight: var(--tp-countdown-desc-weight);
    color: var(--tp-countdown-desc-color);
    line-height: calc(2ex + 6px);
  }

  .tp-countdown-2 .tp__countdown-description {
    color: var(--tp-countdown-desc-color);
    font-size: 18px;
    font-weight: 400;
    text-align: center;
  }

  .tp-countdown-2 .tp__progress {
    margin-bottom: calc(var(--tp-countdown-content-gap) * 2);
  }

  .tp-countdown-2 .tp__progress label {
    color: var(--tp-countdown-desc-color);
    font-size: 16px;
    font-weight: 400;
    text-align: right;
  }
  
  .tp-countdown-2 progress {
    width: 100%;
    appearance: none;
  }

  .tp-countdown-2 progress::-webkit-progress-bar {
    background: var(--tp-countdown-item-bg);
    border-radius: 100px;
  }

  .tp-countdown-2 progress::-webkit-progress-value {
    background: var(--tp-link-background);
    border-radius: 100px;
  }

  @media screen and (min-width: 1024px) {
    .tp-countdown-2 .tp__container {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }

    .tp-countdown-2 .tp__shape {
      height: 155%;
      width: 50%;
      top: -196px;
      right: 0;
      border-radius: 200% 0 0 200%;
    }

    .tp-countdown-2 .tp__header-icon {
      margin-left: 0;
    }

    .tp-countdown-2 .tp__btn,
    .tp-countdown-2 .tp__link {
      margin-inline: 0 auto;
    }

    .tp-countdown-2 .tp__countdown-item {
      padding: 12px;
    }

    .tp-countdown-2 .tp__countdown-description,
    .tp-countdown-2 .tp__progress {
      text-align: right;
    }
  }
{% endstylesheet %}

